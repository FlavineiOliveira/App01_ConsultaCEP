<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ConsultarCEP.View.HomeView"
             BackgroundColor="#FFBF00">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Image Source="logoCorreios" HeightRequest="40" WidthRequest="40" />
            <Entry Text="{Binding Cep}" Keyboard="Numeric" MaxLength="8" Placeholder="Digite o CEP" HorizontalOptions="FillAndExpand" PlaceholderColor="#FFBF00" BackgroundColor="White" />
            <Button Text="BUSCAR CEP" Command="{Binding BuscarEndereco}" TextColor="White" BackgroundColor="#00416B" HorizontalOptions="FillAndExpand"/>
            <Label Text="{Binding Resultado}" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>